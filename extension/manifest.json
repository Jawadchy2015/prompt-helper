{
  "manifest_version": 3,
  "name": "Prompt Helper MVP (Local)",
  "version": "0.1.0",
  "description": "Real-time prompt ghost suggestions for ChatGPT (local backend).",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}